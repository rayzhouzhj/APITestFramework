<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="3" verbose="2" name="Test Suite" parallel="methods" data-provider-thread-count="3">
  <listeners>
    <listener class-name="com.rayzhouzhj.framework.testng.listeners.InvokedMethodListener"/>
    <listener class-name="com.rayzhouzhj.framework.testng.listeners.RetryListener"/>
  </listeners>
  <test name="API Test">
    <groups>
      <run>
        <include name="test"/>
        <exclude name="groups_to_exclude"/>
      </run>
    </groups>
    <classes>
      <class name="com.rayzhouzhj.test.demo1.APITest">
        <methods>
          <include name="testAPI2"/>
        </methods>
      </class> <!-- com.rayzhouzhj.test.demo1.APITest -->
      <class name="com.rayzhouzhj.test.demo2.APITest">
        <methods>
          <include name="testAPI1"/>
        </methods>
      </class> <!-- com.rayzhouzhj.test.demo2.APITest -->
    </classes>
  </test> <!-- API Test -->
</suite> <!-- Test Suite -->
